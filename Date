    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const startDate = new Date(2024, 9, 29, 20, 59, 0); // Mois est 0-index√©, donc 9 = Octobre
            const today = new Date();

            // √âl√©ments pour le d√©verrouillage du site complet (code 2343)
            const siteUnlockSection = document.getElementById('site-unlock-section');
            const siteUnlockInput = document.getElementById('site-unlock-input');
            const siteUnlockButton = document.getElementById('site-unlock-button');
            const siteUnlockError = document.getElementById('site-unlock-error');
            const SITE_UNLOCK_CODE = "2343"; // Nouveau code pour d√©verrouiller l'acc√®s au site

            // √âl√©ments du contenu principal du site
            const mainContentWrapper = document.getElementById('main-content-wrapper');
            const contentContainer = document.getElementById('content-container');

            // √âl√©ments pour le d√©verrouillage du message du 29 (code 2202)
            const secretCodeSection = document.getElementById('secret-code-section');
            const secretCodeInput = document.getElementById('secret-code-input');
            const unlockButton = document.getElementById('unlock-button');
            const errorMessage = document.getElementById('error-message');
            const SECRET_CODE_MONTHLY = "2202"; // Ancien code pour d√©verrouiller le message mensuel

            /**
             * Calcule le nombre de mois pass√©s depuis la date de d√©but.
             * @param {Date} start La date de d√©but.
             * @param {Date} end La date de fin.
             * @returns {number} Le nombre de mois complets.
             */
            function calculateMonthsPassed(start, end) {
                let months;
                months = (end.getFullYear() - start.getFullYear()) * 12;
                months -= start.getMonth();
                months += end.getMonth();
                // Ajuster si le jour de fin est avant le jour de d√©but dans le mois courant
                if (end.getDate() < start.getDate()) {
                    months--;
                }
                return months + 1; // Ajoute 1 pour que le 1er mois soit mois 1, pas 0
            }

            /**
             * Affiche le contenu sp√©cial du moisanniversaire.
             */
            function displayAnniversaryContent() {
                const monthsPassed = calculateMonthsPassed(startDate, today);

                contentContainer.innerHTML = `
                    <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-pink-700 mb-4 leading-tight animate-bounce">
                        üíñ ${monthsPassed} Mois Sp√©ciaux Ensemble ! üåπ
                    </h1>
                    <div class="mb-6 flex justify-center">
                        <!-- Ic√¥ne de rose SVG -->
                        <svg class="rose-icon" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M12 21.5c-3.3-3.3-6-6-6-9.5 0-4.1 3.1-7.5 7-7.5s7 3.4 7 7.5c0 3.5-2.7 6.2-6 9.5z"></path>
                            <path d="M12 21.5L12 14"></path>
                            <path d="M12 14c-1.5-1.5-3-2-3-3.5 0-1.7 1.3-3 3-3s3 1.3 3 3c0 1.5-1.5 2-3 3.5z"></path>
                            <path d="M10 13l-2.5 2.5"></path>
                            <path d="M14 13l2.5 2.5"></path>
                            <path d="M12 11.5L12 5"></path>
                            <path d="M9 10L6.5 7.5"></path>
                            <path d="M15 10L17.5 7.5"></path>
                        </svg>
                    </div>
                    <p class="text-base sm:text-lg md:text-xl text-gray-700 mb-6 leading-relaxed">
                        ${monthsPassed} mois d√©j√†. Le temps passe vite quand on est avec toi.
                        Je suis vraiment content de t‚Äôavoir rencontr√©e, t'es la meilleure personne que je connaisse.
                    </p>
                    <p class="text-lg sm:text-xl md:text-2xl font-semibold text-pink-600">
                        J'ai vraiment envie de rester avec toi, passer mon temps avec toi me fait tellement de bien, princesse.üåπ
                    </p>
                `;
                secretCodeSection.style.display = 'none'; // Cache la section du code 2202 une fois le contenu d√©bloqu√©
            }

            /**
             * Affiche le message d'attente quand le contenu n'est pas d√©bloqu√©.
             */
            function displayWaitingContent() {
                let next29th = new Date(today.getFullYear(), today.getMonth(), 29);
                if (today.getDate() > 29) { // Si on a d√©pass√© le 29 ce mois-ci, on va au 29 du mois prochain
                    next29th = new Date(today.getFullYear(), today.getMonth() + 1, 29);
                }

                const diffTime = Math.abs(next29th - today);
                const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));

                contentContainer.innerHTML = `
                    <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-pink-700 mb-4 leading-tight">
                        En attendant notre jour sp√©cial, princesse... ‚è≥
                    </h1>
                    <p class="text-base sm:text-lg md:text-xl text-gray-700 mb-6 leading-relaxed">
                        Ce petit coin secret t'attend pour une surprise sp√©ciale, qui se r√©v√®le uniquement le 29 de chaque mois. C'est notre fa√ßon de c√©l√©brer nos moments pr√©cieux. Chaque jour nous rapproche de cette date o√π un nouveau message t'attend.
                    </p>
                    <p class="text-lg sm:text-xl md:text-2xl font-semibold text-pink-600">
                        Plus que <span class="font-extrabold">${diffDays} jours</span> avant de d√©couvrir ce que ce mois nous r√©serve !
                    </p>
                `;
                secretCodeSection.style.display = 'block'; // Affiche la section du code 2202
            }

            /**
             * D√©verrouille le contenu principal du site apr√®s v√©rification du code 2343.
             */
            function unlockSiteContent() {
                const enteredSiteCode = siteUnlockInput.value.trim();
                if (enteredSiteCode === SITE_UNLOCK_CODE) {
                    siteUnlockError.style.display = 'none';
                    siteUnlockSection.style.display = 'none'; // Cache la section de d√©verrouillage du site
                    mainContentWrapper.style.display = 'block'; // Affiche le contenu principal du site

                    // Une fois le site d√©verrouill√©, applique la logique du 29 du mois
                    if (today.getDate() === 29) {
                        displayAnniversaryContent();
                    } else {
                        displayWaitingContent();
                    }
                } else {
                    siteUnlockError.textContent = "Code d'acc√®s incorrect. R√©essaie !";
                    siteUnlockError.style.display = 'block';
                }
            }

            // Gestion du clic sur le bouton de d√©verrouillage du site (2343)
            siteUnlockButton.addEventListener('click', unlockSiteContent);

            // Permet de d√©verrouiller le site avec la touche Entr√©e dans le champ de saisie (2343)
            siteUnlockInput.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    unlockSiteContent();
                }
            });

            // G√®re le clic sur le bouton de d√©verrouillage du message mensuel (2202)
            unlockButton.addEventListener('click', () => {
                const enteredMonthlyCode = secretCodeInput.value.trim();
                if (enteredMonthlyCode === SECRET_CODE_MONTHLY) {
                    errorMessage.style.display = 'none';
                    displayAnniversaryContent();
                } else {
                    errorMessage.textContent = "Code incorrect. R√©essaie !";
                    errorMessage.style.display = 'block';
                }
            });

            // Permet de d√©verrouiller le message mensuel avec la touche Entr√©e dans le champ de saisie (2202)
            secretCodeInput.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    unlockButton.click();
                }
            });
        });
    </script>
